    <script>
        document.getElementById("submit-quiz").addEventListener("click", function() {
            var totalPoints = 0;
            var questions = document.querySelectorAll(".quiz-question");
            questions.forEach(function(question) {
                var selectedAnswer = question.querySelector("input:checked").value;
                var correctAnswer = question.getAttribute("data-answer");
                if (selectedAnswer === correctAnswer) {
                    totalPoints++;
                }
            });
            document.getElementById("quiz-results").innerText = "You scored " + totalPoints + " out of " + questions.length + " points.";
        });
    </script>
